<!--add.wxml-->
<view class="containerall">
  <view class='itemview'>
    名称 ：
    <input type='text' class='managetext' name='name' bindinput ="nameInput" placeholder="课程名称"></input>
  </view>
  <view class='itemview'>
    地点 ：
    <input type='text'  class='managetext' name='adress'  bindinput ="areaInput" placeholder="上课地点"></input>
  </view>
  <view class='itemview'>
    时间 ：
    <input type='text' class='managetext' name='time'  bindinput ="timeInput" placeholder="上课时间"></input>
  </view>
  <view class='itemview'>
    <button class='managetext' name='class_begin'  bindtap='doclick' >确定</button>
  </view>
  <view class='itemview'>
    本课程的编号为 ：
    <input type='text' class='managetext' name='id' value='{{cId}}' ></input>
  </view>
   <view class='itemview'>
    <button class='managetext' name='delete' id='add' bindtap='clkqr'>生成二维码</button>
  </view>
</view>